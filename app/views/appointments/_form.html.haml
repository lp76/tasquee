= simple_form_for @appointment do |f|
  = f.association :user, :collection => @users_in_calendar
  = f.association :customer
  = f.input :due, :as => :string, :input_html => { :size => 10 }
  = f.input :period, :collection => Appointment::PERIOD, :include_blank => false, :label_method => lambda {|p| I18n.t p}
  = f.input :description, :input_html => { :rows => 4 }
  = f.input :notes, :input_html => { :rows => 4 }
  = f.input :status, :collection => Appointment::STATUS, :include_blank => false, :label_method => lambda {|s| I18n.t s}
  = f.button :submit
