- title "Tasquee::" + t(:appointments), false

%h2.ribbon.flag.title= t :appointments

#aarchived_appointments
  %table.bordered
    %tr
      %th= t :user
      %th= t :customer
      %th= t :due
      %th= t :period
      %th= t :description
      %th= t :status

    - for appointment in @appointments do
      %tr{:id => "#{appointment.id}", :class => 'archived'}
        %td= appointment.user.name
        %td= appointment.customer.name
        %td= l appointment.due
        %td= t appointment.period
        %td= appointment.description
        %td.center
          %span.label{:class => "archived"}= t(:archived)

%p= button_link_to t(:back_to_list), appointments_path