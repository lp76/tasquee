- title "Tasquee::" + t(:users), false

%h2.ribbon.simple= t(:users)

%table.bordered
  %tr
    %th= t(:name)
    %th= t(:username)
    %th= t(:email)
    %th= t(:admin)
    %th
  - for user in @users
    %tr
      %td= user.name
      %td= user.username
      %td= user.email
      %td= t user.admin?.to_s
      %td
        = button_group do
          = edit_button_link_to t(:edit), edit_user_path(user)
          - if current_user.name != user.name
            = trash_negative_button_link_to t(:destroy), user,
              :confirm => t(:are_you_sure), :method => :delete

%p
  = user_button_link_to t(:new_user), new_user_path
